@model IEnumerable<Student>

@{
    ViewBag.Title = "All Students";
    ViewBag.lien = "Students";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- DATA TABLE -->
            <h3 class="title-5 m-b-35">All Student</h3>
            @if (Model.Count() == 0)
            {
                <div class="alert alert-dark d-flex justify-content-between">
                    <strong>No yet Student!   </strong>
                    <a asp-action="Create" asp-controller="Student" class="btn-sm btn-primary"><i class="zmdi zmdi-plus"></i>Add Certification</a>
                </div>
            }
            else
            {
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                    </div>
                    <div class="table-data__tool-right">
                        <a asp-action="Create" asp-controller="Student" class="btn-sm btn-primary">
                            <i class="zmdi zmdi-plus"></i>Add Student
                        </a>
                    </div>
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table id="certificationdata" class="table table-data2">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Student</th>
                                <th>Country</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.studentId</td>
                                <td>
                                    @item.FirstName <span>@item.LastName </span>
                                </td>
                                <td>
                                     <span>@item.Country</span>
                                </td>
                                <td>
                                    <div class="table-data-feature">
                                        <a asp-action="Detail" asp-controller="Student" asp-route-id="@item.studentId" class="item" data-toggle="tooltip" data-placement="top" title="Detail">
                                            <i class="zmdi zmdi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.studentId" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.studentId" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="zmdi zmdi-delete" style="color:red"></i>
                                        </a>
                                        @*<button class="item" data-toggle="tooltip" data-placement="top" title="More">
                    <i class="zmdi zmdi-more"></i>
                </button>*@
                                    </div>
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
                <!-- END DATA TABLE -->
            }


        </div>
    </div>
</div>
@section DataTables{
    <script>
        $(document).ready(function () {
            $('#certificationdata').DataTable();
        });
    </script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
}