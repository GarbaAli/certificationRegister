@model StudentEditViewModel


@{
    ViewBag.Title = "Update Student";
    ViewBag.lien = "Students";
}

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>

        <div class="col-sm-8">
            <div class="card">
                <form method="post" class="">
                    <input asp-for="studentId" hidden />
                    <div class="card-header">
                        <strong>Update</strong> Student
                    </div>
                    <div class="card-body card-block">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" for="nf-email" class=" form-control-label"></label>
                                    <input asp-for="FirstName" id="nf-email" class="form-control">
                                    <span asp-validation-for="FirstName" class="text-sm-left text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class=" form-control-label"></label>
                                    <input asp-for="LastName" class="form-control">
                                    <span asp-validation-for="LastName" class="text-sm-left text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Country" for="nf-password" class=" form-control-label"></label>
                            <input asp-for="Country" id="nf-password" class="form-control">
                            <span asp-validation-for="Country" class="text-sm-left text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-check-circle"></i> Update Student
                        </button>
                        <a asp-action="Index" asp-controller="Student" class="btn btn-danger btn-sm">
                            <i class="fa fa-reply"></i> back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-sm-2"></div>
    </div>
</div>