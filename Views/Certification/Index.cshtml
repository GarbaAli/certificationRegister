@model IEnumerable<Certification>

@{
    ViewBag.Title = "All Certifications";
    ViewBag.lien = "Certifications";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <!-- DATA TABLE -->
            <h3 class="title-5 m-b-35">All Certifications</h3>
            @if (Model.Count() == 0)
            {
                <div class="alert alert-dark d-flex justify-content-between">
                    <strong>No yet Certification!   </strong>
                    <a asp-action="Create" asp-controller="Certification" class="btn-sm btn-primary"><i class="zmdi zmdi-plus"></i>Add Certification</a>
                </div>
            }
            else
            {
                <div class="table-data__tool">
                    <div class="table-data__tool-left">
                    </div>
                    <div class="table-data__tool-right">
                        <a asp-action="Create" asp-controller="Certification" class="au-btn au-btn-icon au-btn--green au-btn--small">
                            <i class="zmdi zmdi-plus"></i>Add Certification
                        </a>
                        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                            <select class="js-select2" name="type">
                                <option selected="selected">Export</option>
                                <option value="">Option 1</option>
                                <option value="">Option 2</option>
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive table-responsive-data2">
                    <table id="certificationdata" class="table table-data2">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Certification</th>
                                <th>Libelle</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.certificationId</td>
                                    <td>
                                        <span class="block-email">@item.sigle </span>
                                    </td>
                                    <td class="desc">@item.libelle</td>
                                    <td>
                                        <div class="table-data-feature">
                                            @*<button class="item" data-toggle="tooltip" data-placement="top" title="Send">
                                    <i class="zmdi zmdi-mail-send"></i>
                                </button>*@
                                            <a asp-action="Edit" asp-controller="Certification" asp-route-id="@item.certificationId" class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                <i class="zmdi zmdi-edit"></i>
                                            </a>
                                            <a  asp-action="Delete" asp-controller="Certification" asp-route-id="@item.certificationId" class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                <i class="zmdi zmdi-delete"style="color:red"></i>
                                            </a>
                                            @*<button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                    <i class="zmdi zmdi-more"></i>
                                </button>*@
                                        </div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
                <!-- END DATA TABLE -->
            }


        </div>
    </div>
</div>
@section DataTables{
    <script>
        $(document).ready(function () {
            $('#certificationdata').DataTable();
        });
    </script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
}