@model CertificationEditViewModel

@{ 
    ViewBag.Title = "Edit Certification";
    ViewBag.lien = "Certifications";
}

<div class="container">
    <div class="row">
        <div class="col-sm-2"></div>

        <div class="col-sm-8">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <strong>Update</strong> Certification
                    </div>
                    <div class="card-body card-block">
                        <input hidden asp-for="certificationId" />
                        <div class="form-group">
                            <label asp-for="sigle" for="nf-email" class=" form-control-label"></label>
                            <input asp-for="sigle" id="nf-email" class="form-control">
                            <span asp-validation-for="sigle" class="text-sm-left text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="libelle" for="nf-password" class=" form-control-label"></label>
                            <input asp-for="libelle" id="nf-password" class="form-control">
                            <span asp-validation-for="libelle" class="text-sm-left text-danger"></span>
                        </div>

                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-check-circle-o"></i> Update Certification
                        </button>
                        <a asp-action="Index" asp-controller="Certification" class="btn btn-danger btn-sm">
                            <i class="fa fa-reply"></i> back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-sm-2"></div>
    </div>
</div>